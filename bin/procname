#!/bin/sh

###
### Set the default port process name
###
set -e

if [ "$DEBUG" ]; then
set -x
fi

export ERL_LIBS=$PWD/_build/default/lib:$REBAR_DEPS_DIR:$REBAR_CHECKOUTS_DIR:$ERL_LIBS

SRC=$(erl -noshell -s init stop -eval "io:format(\"~s\", [alcove_drv:progname()]).")
DST=$(erl -noshell -s init stop -eval "io:format(\"~s\", [prx_drv:progname()]).")

PRIVDIR=$(dirname $DST)

mkdir -p "$PRIVDIR"
cp -f $SRC $DST
